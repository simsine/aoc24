package part1;

import java.io.File;
import java.io.IOException;
import java.util.ArrayList;
import java.util.List;
import java.util.Scanner;

public class Main {
	
	public static int safeReports = 0;
	
	public static void main(String[] args) throws IOException {
		
		Scanner scanner = new Scanner(new File("input.txt"));
		
		while (scanner.hasNextLine()) {
			String line = scanner.nextLine();
			List<Integer> nums = List.of(line.split(" ")).stream().map(Integer::valueOf).toList();
			boolean safe = true;
			ArrayList<Integer> signs = new ArrayList<>(nums.size());
			for (int i = 0; i < nums.size()-1; i++) {
				int diff = Math.abs(nums.get(i) - nums.get(i+1));
				if (diff < 1 || diff > 3) safe = false;
				Integer diff2 = nums.get(i) - nums.get(i+1);
				signs.add(Integer.signum(diff2));
			}
			if (signs.stream().anyMatch(t -> t == 0)) safe = false;
				
			if (safe) safeReports++;
		}
		scanner.close();
		
		System.out.println("safeReports:" + safeReports);
	}
	
	public static boolean isSafe(List<Integer>) {
		
	}
}
